
@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-xs-12 col-sm-6 col-sm-offset-3">
		<div class="panel panel-default" ng-controller="LoginController">
			<form name="loginForm">
				<fieldset>
					<div class="panel-heading">Login Form</div>

					<div class="panel-body">
						<div class="form-group">
							<input type="text" class="form-control" placeholder="Login" ng-model="user.Login" required>
						</div>

						<div class="form-group">
							<input type="password" class="form-control" placeholder="Password" ng-model="user.Password" required>
						</div>

						<div class="form-group" ng-show="errors.length">
							@Html.Partial("Error")
						</div>

						<div class="form-group" role="group">
							<button type="button" class="btn btn-default" ng-click="login()" ng-disabled="loginForm.$invalid">Login</button>
						</div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</div>
